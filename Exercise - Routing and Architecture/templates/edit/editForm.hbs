<form action="#/edit" method="post">
    <div class="form-group">
        <label for="name">New Team Name:</label>
        <input class="form-control" type="text" id="name" name="name" value="{{name}}"/>
    </div>
    <div class="form-group">
        <label for="comment">New Team Comment/Description: </label>
        <input class="form-control" type="text" id="comment" name="comment" value="{{comment}}"/>
    </div>
    <input class="btn btn-default" type="submit" value="Update Team"/>
    {{!-- <a href="#/join/{{teamId}}" class="btn btn-default">Join Team</a> --}}
</form>